<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chatjava.Controller">
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="textArea" onAction="#sendMsg"  HBox.hgrow="ALWAYS" promptText="Enter Message..."></TextField>
        <Button fx:id="buttonSend" onAction="#sendMsg" text="Send Msg" HBox.hgrow="ALWAYS"></Button>
    </HBox>
</VBox>
